<%= devise_error_messages! %>

<div id="login">
  <h1>Sign Up</h1>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <div class="inputs">
        <%= f.text_field :fname, autofocus: true, :placeholder=>"First Name", :id=>"first_name" %>
        <%= f.text_field :lname, autofocus: true, :placeholder=>"Last Name", :id=>"last_name" %><br>
      

        <%= f.email_field :email, autofocus: true,:id=>"username", :placeholder=>"Email Adress"%><br>

        <%= f.password_field :password, autocomplete: "off", :placeholder=>"Password",:id=>"username" %>

        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder=>"Password Confirmation",:id=>"username" %>
        <br>
     </div>

      <%= f.label :role, "Are you a(n)?", :class=>"role" %>
  <%= f.collection_select :role, User::ROLES, :to_s, :humanize, {:include_blank => true}, :class=>"role_checkbox" %>
     

     <%= f.submit "Create my account", :class=>"btn btn-info" , :id=>"login_submit"%>
  <% end %>


  <h2 class="Or_seperate">Or</h2>


  <%- if devise_mapping.omniauthable? %>

      <button class="btn btn-twitter">
        <i class="fa fa-twitter"></i>
          <%= link_to " | Sign in with Twitter",user_omniauth_authorize_path(:twitter), :class=>"social_media_button" %>
      </button>   
      <button class="btn btn-facebook">
        <i class="fa fa-facebook"></i>
      <%= link_to " | Sign in with Facebook",user_omniauth_authorize_path(:facebook), :class=>"social_media_button" %>
      </button>
      <button class="btn btn-google-plus">
        <i class="fa fa-google-plus"></i>
      <%= link_to " | Sign in with Google",user_omniauth_authorize_path(:google_oauth2), :class=>"social_media_button" %>
      </button> <br><br><br>  
     
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), :class=>"forgot_password" %>
    <% end -%>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        Not a member? <%= link_to "Register", new_registration_path(resource_name),:class=>"btn btn-info" %><br />
    <% end -%>

</div>    





