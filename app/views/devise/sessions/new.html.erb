<div id="login">
	<h1>Sign in</h1>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div id="inputs">
	  
	  <%= f.email_field :email, autofocus: true,:id=>"username", :placeholder=>"Email Adress"%><br><br>

	  
	  <%= f.password_field :password, autocomplete: "off", :placeholder=>"Password",:id=>"username" %>
	</div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div><%= f.submit "Sign in" %></div>
	<% end %>
</div>		


	 <%= render "devise/shared/links" %>
 
