<div id="login">
	<h1>Log in</h1>


	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	   <div class="inputs">
		  <%= f.email_field :email, autofocus: true,:id=>"username", :placeholder=>"Email Adress"%><br><br>

		  <%= f.password_field :password, autocomplete: "off", :placeholder=>"Password",:id=>"username" %><br><br>
	   </div>

	   <% if devise_mapping.rememberable? -%>
	    <%= f.check_box :remember_me, :id=>"remember_btn" %> <%= f.label :remember_me, :class=>"btn btn-success" %>
	   <% end -%>

	   <%= f.submit "Log in", :class=>"btn btn-info" , :id=>"login_submit"%>
	<% end %>


	<h2 class="Or_seperate">Or</h2>


	<%- if devise_mapping.omniauthable? %>

	    <button class="btn btn-twitter">
	    	<i class="fa fa-twitter"></i>
	        <%= link_to " | Sign in with Twitter",user_omniauth_authorize_path(:twitter), :class=>"social_media_button" %>
	    </button>   
	    <button class="btn btn-facebook">
	    	<i class="fa fa-facebook"></i>
	    <%= link_to " | Sign in with Facebook",user_omniauth_authorize_path(:facebook), :class=>"social_media_button" %>
	    </button>
	    <button class="btn btn-google-plus">
	    	<i class="fa fa-google-plus"></i>
	    <%= link_to " | Sign in with Google",user_omniauth_authorize_path(:google_oauth2), :class=>"social_media_button" %>
	    </button> <br><br><br>  
     
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), :class=>"forgot_password" %>
    <% end -%>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        Not a member? <%= link_to "Register", new_registration_path(resource_name),:class=>"btn btn-info" %><br />
    <% end -%>

</div>		


<%= render "devise/shared/links" %>
 
